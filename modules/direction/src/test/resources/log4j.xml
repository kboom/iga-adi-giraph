<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration debug="false">

    <appender name="default.console" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%c] - %m%n" />
        </layout>
    </appender>

    <appender name="default.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="log.log" />
        <param name="append" value="false" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%c] - %m%n" />
        </layout>
    </appender>

    <appender name="mat.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="mat.log" />
        <param name="append" value="false" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>

    <appender name="mem.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="mem.log" />
        <param name="append" value="false" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>

    <appender name="vof.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="vof.log" />
        <param name="append" value="false" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>

    <appender name="part.file" class="org.apache.log4j.FileAppender">
        <param name="file" value="part.log" />
        <param name="append" value="false" />
        <param name="threshold" value="trace" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>

    <logger name="edu.agh.iga.adi.giraph.direction.computation.factorization.FactorizationLogger" additivity="false">
        <level value="trace" />
        <appender-ref ref="mat.file" />
    </logger>

    <logger name="edu.agh.iga.adi.giraph.direction.performance.MemoryLogger" additivity="false">
        <level value="debug" />
        <appender-ref ref="mem.file" />
    </logger>

    <logger name="edu.agh.iga.adi.giraph.direction.io.StepVertexOutputFormat" additivity="false">
        <level value="trace" />
        <appender-ref ref="vof.file" />
    </logger>

    <logger name="edu.agh.iga.adi.giraph.direction.IgaPartitionerFactory" additivity="false">
        <level value="trace" />
        <appender-ref ref="part.file" />
    </logger>

    <logger name="edu.agh.iga.adi.giraph" additivity="false">
        <level value="debug" />
        <appender-ref ref="default.console" />
        <appender-ref ref="default.file" />
    </logger>

    <root>
        <priority value="debug" />
        <appender-ref ref="default.console" />
        <appender-ref ref="default.file" />
    </root>

</log4j:configuration>